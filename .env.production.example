# Production Environment Variables Template
# Copy this file to .env.production and update with your production values.
# IMPORTANT: Never commit .env.production to version control!

# PostgreSQL Credentials (Production Database)
POSTGRES_USER=your_production_db_user
POSTGRES_PASSWORD=your_very_secure_production_password_2024
POSTGRES_DB=moov_production_db

# Application Secrets (Production)
NODE_ENV=production
JWT_SECRET=your_extremely_secure_production_jwt_secret_at_least_64_characters_long_2024
FRONTEND_URL=https://your-production-domain.com

# API Configuration (Production)
API_PORT=8000
NEXT_PUBLIC_API_URL=https://api.your-production-domain.com
NEXT_PUBLIC_EMBEDDING_SERVICE_URL=https://embedding.your-production-domain.com

# API Keys (Production)
MAPTILER_API_KEY=your_production_maptiler_api_key

# Redis Configuration (Production)
REDIS_URL=redis://your-production-redis-host:6379
REDIS_HOST=your-production-redis-host
REDIS_PORT=6379

# Embedding Service Configuration (Production)
EMBEDDING_SERVICE_URL=http://embedding-service:8001
EMBEDDING_SERVICE_BACKUP_URL=http://embedding-service-backup:8002

# External Services (Production)
NEON_DATABASE_URL=postgresql://your_production_neon_connection_string
NEON_API_KEY=your_production_neon_api_key

# Authentication (Production)
CLERK_PUBLISHABLE_KEY=your_production_clerk_publishable_key
CLERK_SECRET_KEY=your_production_clerk_secret_key
CLERK_WEBHOOK_SECRET=your_production_clerk_webhook_secret

# Media Management (Production)
CLOUDINARY_CLOUD_NAME=your_production_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_production_cloudinary_api_key
CLOUDINARY_API_SECRET=your_production_cloudinary_api_secret
CLOUDINARY_URL=cloudinary://your_production_cloudinary_url

# Google Services (Production)
GOOGLE_MAPS_API_KEY=your_production_google_maps_api_key

# Monitoring & Analytics (Production)
SENTRY_DSN=your_production_sentry_dsn
ANALYTICS_ID=your_production_analytics_id

# SSL/TLS Configuration (Production)
SSL_CERT_PATH=/etc/ssl/certs/your-cert.pem
SSL_KEY_PATH=/etc/ssl/private/your-key.pem