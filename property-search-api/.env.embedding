# ============================================================================
# Environment Variables for Embedding Service Integration
# Add these to your property-search-api/.env file
# ============================================================================

# Embedding Service Configuration
EMBEDDING_SERVICE_URL=http://localhost:8001

# Database Configuration (make sure pgvector is enabled)
# DATABASE_URL=your_postgres_url_with_pgvector

# Performance Monitoring
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=true

# Cache Configuration
EMBEDDING_CACHE_TTL=86400  # 24 hours
MAX_EMBEDDING_REQUESTS_PER_MINUTE=100

# Search Configuration
DEFAULT_SEARCH_LIMIT=20
MAX_SEARCH_LIMIT=100
SIMILARITY_THRESHOLD=0.3

# Cost Tracking
ENABLE_COST_TRACKING=true
EMBEDDING_COST_PER_REQUEST=0.0001  # $0.0001 per request

# Health Check Configuration
EMBEDDING_HEALTH_CHECK_INTERVAL=30000  # 30 seconds
EMBEDDING_SERVICE_TIMEOUT=10000        # 10 seconds