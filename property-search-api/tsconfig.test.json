{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": [
            "jest",
            "node"
        ],
        "declaration": false,
        "declarationMap": false,
        "sourceMap": false,
        "removeComments": false,
        "rootDir": ".",
        "outDir": "./dist-test",
        "noEmit": true
    },
    "include": [
        "src/**/*",
        "tests/**/*",
        "src/__tests__/**/*",
        "jest-globals.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}