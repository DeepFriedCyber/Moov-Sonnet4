{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": [
            "es2020"
        ],
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "allowJs": true,
        "types": [
            "jest",
            "node"
        ],
        "noEmit": true
    },
    "include": [
        "tests/**/*",
        "jest-globals.d.ts",
        "tests/jest.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src"
    ]
}